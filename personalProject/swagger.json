{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Games API",
    "version": "1.0.0"
  },
  "host": "jtroffpersonalProject.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Redirect"
        ],
        "summary": "Redirects base url",
        "description": "Just redirects base url to /games",
        "parameters": [],
        "responses": {}
      }
    },
    "/games/": {
      "get": {
        "tags": [
          "Games"
        ],
        "summary": "Get all games",
        "description": "Get all the games from the database",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Games"
        ],
        "summary": "Add new game",
        "description": "Provide values to the fields to add a new game",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "gameName": {
                  "example": "any"
                },
                "creator": {
                  "example": "any"
                },
                "gameType": {
                  "example": "any"
                },
                "gameGenre": {
                  "example": "any"
                },
                "numberPlayers": {
                  "example": "any"
                },
                "playTime": {
                  "example": "any"
                },
                "difficultyToLearn": {
                  "example": "any"
                },
                "recommended": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/games/{id}": {
      "get": {
        "tags": [
          "Games"
        ],
        "summary": "Get desired game",
        "description": "Enter an id to get the corresponding game",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
